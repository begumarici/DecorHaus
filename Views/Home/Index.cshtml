@model List<dotnet_store.Models.Product>
@{
    ViewData["Title"] = "Ana Sayfa";
}



<!-- Öne Çıkan Ürünler -->
<section class="container my-5">
    <h2 class="fw-bold mb-4">Öne Çıkan Ürünler</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model.Take(3)) 
            {
                <div class="col">
    <div class="card border-0 shadow-sm">
        <div class="position-relative">
            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
            </a>
            <span class="position-absolute top-0 start-0 m-2 badge bg-dark">-20%</span>
            <span class="position-absolute top-0 start-50 translate-middle-x mt-2 badge bg-success">YENİ</span>
        </div>
        <div class="card-body">
            <h5 class="card-title mb-1">
                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="text-dark text-decoration-none">
                    @item.Name
                </a>
            </h5>
            <small class="text-muted">@item.Category?.CategoryName, @item.Name</small>
            <div class="mt-2">
                <del class="text-muted">₺1.250,00</del>
                <span class="fw-bold text-dark ms-2">@item.Price.ToString("C")</span>
            </div>
        </div>
<div class="card-footer bg-white border-top-0">
    <form asp-controller="Cart" asp-action="AddToCart" method="post">
        <input type="hidden" name="id" value="@item.ProductId" />
        <button type="submit" class="btn btn-light w-100 fw-bold">SEPETE EKLE</button>
    </form>
</div>
    </div>
</div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">Henüz ürün bulunmamaktadır.</div>
    }
</section>