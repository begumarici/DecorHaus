@model dotnet_store.Models.Product
@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-5">
    <div class="row g-4">

        <div class="col-md-6">
            <div class="gallery-wrap">
                <div class="img-big-wrap mb-3">
                    <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
                </div>

                <div class="thumbs-wrap d-flex gap-2">
                    <img src="@Model.ImageUrl" class="img-thumbnail" style="width: 80px;" />
                    <img src="@Model.ImageUrl" class="img-thumbnail" style="width: 80px;" />
                    <img src="@Model.ImageUrl" class="img-thumbnail" style="width: 80px;" />
                </div>
            </div>
        </div>


        <div class="col-md-6">
            <h2>@Model.Name</h2>

            <p class="text-muted">
                <del>₺1.250,00</del> <span class="fs-4 fw-bold text-dark ms-2">@Model.Price.ToString("C")</span>
            </p>
            <p class="text-muted">@Model.Description</p>

            <div class="mb-3">
                <span class="badge bg-success"><i class="fa-solid fa-check"></i> Stokta mevcut</span>
            </div>

            <div class="d-flex gap-2 mb-3">
                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="id" value="@Model.ProductId" />
                    <button type="submit" class="btn btn-outline-dark fw-bold">SEPETE EKLE</button>
                </form>
            </div>

            <p><strong>Ürün Kodu:</strong> DH-@Model.ProductId</p>
            <p>
                <strong>Kategori:</strong>
                @if (Model.Category != null)
                {
                    <span>@Model.Category.CategoryName</span>
                }
            </p>

            <div class="d-flex gap-3">
                <span><strong>Paylaş:</strong></span>
                <i class="fab fa-facebook-f text-muted"></i>
                <i class="fab fa-pinterest text-muted"></i>
                <i class="fab fa-whatsapp text-muted"></i>
                <i class="fab fa-telegram text-muted"></i>
            </div>
        </div>
    </div>
</div>