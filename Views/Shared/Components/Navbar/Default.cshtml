@model List<dotnet_store.Models.Category>

<nav class="navbar navbar-expand-lg bg-white border-bottom py-3">
    <div class="container">
        <a class="navbar-brand fw-bold fs-4 text-dark" href="/">DecorHaus.</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-center" id="mainNavbar">
            <ul class="navbar-nav gap-3">
                <li class="nav-item">
                    <a class="nav-link fw-bold text-dark" href="/">ANA SAYFA</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-secondary fw-bold" asp-controller="Product" asp-action="ListAll">ÜRÜNLER</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-secondary" asp-controller="Home" asp-action="About">HAKKIMIZDA</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-secondary" asp-controller="Home" asp-action="Contact">İLETİŞİM</a>
                </li>
                @if (Context.Session.GetString("user") == "admin")
                {
                    <li class="nav-item">
                        <a class="nav-link text-secondary fw-bold" asp-controller="Product" asp-action="AdminList">ÜRÜNLERİ DÜZENLE</a>
                    </li>
                }
            </ul>
        </div>

        <div class="d-flex gap-3 align-items-center">
            <form asp-controller="Product" asp-action="Search" method="get" class="d-flex" role="search">
                <input class="form-control form-control-sm me-2" type="search" name="q" placeholder="Ara..." />
                <button class="btn btn-outline-dark btn-sm" type="submit"><i class="fas fa-search"></i></button>
            </form>

            <a asp-controller="Account" asp-action="Login" class="text-dark">
                <i class="fas fa-user"></i>
            </a>
            <a href="/Cart/Index" class="position-relative text-dark">
                <i class="fas fa-shopping-cart"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-dark">
                    @(ViewBag.CartCount ?? 0)
                </span>
            </a>
        </div>
    </div>
</nav>