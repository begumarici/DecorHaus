@model List<dotnet_store.Models.Slider>

<div id="mainSlider" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="d-flex align-items-center justify-content-center" style="height: 600px; background-color: #f8f9fa;">
                    <div class="container">
                        <div class="row align-items-center">
                            <div class="col-lg-6 text-center text-lg-start">
                                <h1 class="display-4 fw-bold">@Model[i].Title</h1>
                                <p class="lead">@Model[i].Description</p>
                                <a href="#" class="btn btn-dark btn-lg">ŞİMDİ İNCELE</a>
                            </div>
                            <div class="col-lg-6 text-center">
                                <img src="@Model[i].ImageUrl" alt="@Model[i].Title" style="max-height: 500px;" class="img-fluid" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

<button class="carousel-control-prev" type="button" data-bs-target="#mainSlider" data-bs-slide="prev" style="filter: invert(1);">
    <span class="carousel-control-prev-icon"></span>
</button>
<button class="carousel-control-next" type="button" data-bs-target="#mainSlider" data-bs-slide="next" style="filter: invert(1);">
    <span class="carousel-control-next-icon"></span>
</button>

    <div class="carousel-indicators">
        @for (int i = 0; i < Model.Count; i++)
        {
            <button type="button" data-bs-target="#mainSlider" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></button>
        }
    </div>
</div>